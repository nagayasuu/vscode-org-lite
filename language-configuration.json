{
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["*", "*"],
    ["~", "~"]
  ],
  "onEnterRules": [
    {
      "beforeText": "^\\s*\\*\\s",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "^\\s*- ",
      "action": { "indent": "none", "appendText": "- " }
    }
  ]
}
