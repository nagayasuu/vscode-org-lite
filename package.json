{
  "name": "org-lite",
  "displayName": "Org Lite",
  "description": "Simplified Org mode experience for Visual Studio Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "org",
        "aliases": [
          "Org",
          "org"
        ],
        "extensions": [
          ".org"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "org",
        "scopeName": "source.org",
        "path": "./syntaxes/org.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "org-lite.rotateTodo",
        "title": "Rotate TODO state"
      },
      {
        "command": "org-lite.rotateTodoReverse",
        "title": "Rotate TODO state (reverse)"
      },
      {
        "command": "org-lite.formatOrgTable",
        "title": "Format Org Table"
      },
      {
        "command": "org-lite.tableTabAction",
        "title": "Format Org Table"
      },
      {
        "command": "org-lite.tableShiftTabAction",
        "title": "Move to Previous Org Table Cell"
      },
      {
        "command": "org-lite.tableEnterAction",
        "title": "Org Table Enter Action"
      },
      {
        "command": "org-lite.tableMoveColumnLeft",
        "title": "Move Org Table Column Left"
      },
      {
        "command": "org-lite.tableMoveColumnRight",
        "title": "Move Org Table Column Right"
      }
    ],
    "keybindings": [
      {
        "command": "org-lite.rotateTodo",
        "key": "alt+right",
        "when": "editorLangId == org"
      },
      {
        "command": "org-lite.rotateTodoReverse",
        "key": "alt+left",
        "when": "editorLangId == org"
      },
      {
        "command": "org-lite.formatOrgTable",
        "key": "tab",
        "when": "editorTextFocus && editorLangId == org && orgTableLineFocus"
      },
      {
        "command": "org-lite.tableTabAction",
        "key": "tab",
        "when": "editorTextFocus && editorLangId == org && orgTableCellFocus"
      },
      {
        "command": "org-lite.tableShiftTabAction",
        "key": "shift+tab",
        "when": "editorTextFocus && editorLangId == org && orgTableCellFocus"
      },
      {
        "command": "org-lite.tableEnterAction",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == org && orgTableCellFocus"
      },
      {
        "command": "org-lite.tableMoveColumnLeft",
        "key": "ctrl+alt+left",
        "when": "editorTextFocus && editorLangId == org && orgTableCellFocus"
      },
      {
        "command": "org-lite.tableMoveColumnRight",
        "key": "ctrl+alt+right",
        "when": "editorTextFocus && editorLangId == org && orgTableCellFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "3.6.2",
    "typescript": "^5.8.3"
  }
}
